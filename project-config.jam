import os ;
import feature ;

if ! ( baremetal in [ feature.values target-os ] )
{
  feature.extend target-os : baremetal ;
}

# Default toolsets
if [ os.name ] = NT
{
  using msvc ;
}
else if [ os.name ] = CYGWIN
{
  using gcc ;
}
else if [ os.name ] = LINUX
{
  using gcc ;
}
else if [ os.name ] = MACOSX
{
  using darwin ;
}
